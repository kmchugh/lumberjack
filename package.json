    "dependencies": {
        "merge": "~1.2.0",
        "rimraf": "~2.2.8",
        "mongoose": "~3.8.12"
    },
    "devDependencies": {
        "istanbul": "0.3.2",
        "mocha": "~2.0.1",
        "chai": "~1.10.0",
        "supertest": "~0.15.0",
        "jade": "~1.7.0",
